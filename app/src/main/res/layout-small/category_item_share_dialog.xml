<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBgDialog">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_title_share"
            android:gravity="center"
            android:textColor="@color/abc_text_black"
            android:textSize="@dimen/size_30"
            android:padding="@dimen/pad_10"
            android:layout_marginTop="@dimen/pad_15"
            android:layout_marginBottom="@dimen/pad_10"/>
        <View
            android:id="@+id/view_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_view_close_dialog_share"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/pad_10"
            android:layout_marginRight="@dimen/pad_10"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <GridView
            android:id="@+id/gridview_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:numColumns="2"
            android:gravity="center">
        </GridView>
    </LinearLayout>

</LinearLayout>
