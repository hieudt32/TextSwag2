<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#212a33"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/pad_5"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/pad_10"
        android:weightSum="2"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.word.swag.text.View.Other.TypefaceTextView
                android:id="@+id/tv_opacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pad_3"
                android:text="@string/abc_opacity"
                android:textSize="18dp"
                android:textColor="@color/abc_text_seekbar"
                geekui:customTypeface="fonts/SFRegular.otf"/>

            <SeekBar
                android:id="@+id/sb_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_blue"
                android:thumb="@drawable/thumb_blue"
                android:progress="255"
                android:max="255"
                android:layout_marginRight="@dimen/pad_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.word.swag.text.View.Other.TypefaceTextView
                android:id="@+id/tv_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pad_5"
                android:text="@string/abc_shadow"
                android:textSize="18dp"
                android:textColor="@color/abc_text_seekbar"
                geekui:customTypeface="fonts/SFRegular.otf"/>

            <SeekBar
                android:id="@+id/sb_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_blue"
                android:thumb="@drawable/thumb_blue"
                android:max="15"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/pad_10"
        android:paddingRight="@dimen/pad_10"
        android:layout_weight="1"
        android:layout_gravity="center">

        <com.word.swag.text.View.Other.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pad_15"
            android:text="@string/abc_color"
            android:textSize="18dp"
            android:textColor="@color/abc_text_seekbar"
            geekui:customTypeface="fonts/SFRegular.otf"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_10"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_view_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</LinearLayout>